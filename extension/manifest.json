{
  "manifest_version": 3,
  "name": "Duplicat Bid Checker for Upwork",
  "version": "1.3",
  "description": "Save Upwork Bid URL to the team database. Prevents duplicate bids. by Yajuvendra.",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://www.upwork.com/*",
    "https://firestore.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.upwork.com/jobs/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}